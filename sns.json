{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "Email Notifications of SNS",
    "Parameters": {
        "SnsDisplayName": {
            "Type": "String",
            "Default": "Notification of SNS",
            "Description": "Enter sns display name"
        },
        "SnsTopicName": {
            "Type": "String",
            "Default": "sns-core-sns-alarm",
            "Description": "Enter sns topic name "
        },
        "SnsSubscriber": {
            "Type": "String",
            "Default": "naralamalli@gmail.com",
            "Description": "Enter email address to be notified"
        },
        "SnsProtocol": {
            "Type": "String",
            "Default": "Email",
            "Description": "Enter Protocol of sns topic"
        }
    },
    "Resources": {
        "snsdev": {
            "Type": "AWS::SNS::Topic",
            "Properties": {
                "DisplayName": {
                    "Ref": "SnsDisplayName"
                },
                "Subscription": [
                    {
                        "Endpoint": {
                            "Ref": "SnsSubscriber"
                        },
                        "Protocol": {
                            "Ref": "SnsProtocol"
                        }
                    }
                ],
                "TopicName": {
                    "Ref": "SnsTopicName"
                },
                "Tags": [
                    {
                        "Key": "caspia-core-env",
                        "Value": "qa"
                    },
                    {
                        "Key": "caspia-core-project",
                        "Value": "dev"
                    }
                ]
            }
        }
    }
}