{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "SNS Email Failure Notifications of Lambda",
    "Parameters": {
        "SnsDisplayName": {
            "Type": "String",
            "Default": "Failure Notification of SNS",
            "Description": "Enter sns display name"
        },
        "QASnsTopicNameLambda": {
            "Type": "String",
            "Default": "sns-core-testing-lambda-alarm-01",
            "Description": "Enter sns topic name "
        },
        "SnsSubscriber1": {
            "Type": "String",
            "Default": "naralamalli@gmail.com",
            "Description": "Enter email address to be notified"
        },
        "SnsProtocol": {
            "Type": "String",
            "Default": "Email",
            "Description": "Enter Protocol of sns topic"
        }
    },
    "Resources": {
        "QASNSLambda": {
            "Type": "AWS::SNS::Topic",
            "Properties": {
                "DisplayName": {
                    "Ref": "SnsDisplayName"
                },
                "Subscription": [
                    {
                        "Endpoint": {
                            "Ref": "SnsSubscriber1"
                        },
                        "Protocol": {
                            "Ref": "SnsProtocol"
                        }
                    }
                ],
                "TopicName": {
                    "Ref": "QASnsTopicNameLambda"
                },
                "Tags": [
                    {
                        "Key": "glb-core-env",
                        "Value": "qa"
                    },
                    {
                        "Key": "glb-core-project",
                        "Value": "prd"
                    }
                ]
            }
        }
    }
}