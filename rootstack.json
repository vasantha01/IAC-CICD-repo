{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Parameters": {
        "SnsSubscriber1": {
            "Type": "String",
            "Default": "kp01vasantharani@gmail.com",
            "Description": "Enter email address to be notified"
        },
        "Resources": {
            "s3": {
                "Type": "AWS::CloudFormation::Stack",
                "Properties": {
                    "TemplateURL": "https://s3bucket-poc1.s3.amazonaws.com/s3.json",
                    "TimeoutInMinutes": "60"
                }
            },
            "sns": {
                "Type": "AWS::CloudFormation::Stack",
                "Properties": {
                    "Parameters": {
                        "Ref": "SnsSubscriber1"
                    },
                    "TemplateURL": "https://s3bucket-poc1.s3.amazonaws.com/sns.json"
                }
            }
        }
    },
    "Outputs": {
        "StackRef": {
            "Value": {
                "Ref": "s3"
            }
        },
        "OutputFromNestedStack": {
            "Value": {
                "Fn::GetAtt": [
                    "s3",
                    "Outputs.BucketName"
                ]
            }
        }
    }
}
