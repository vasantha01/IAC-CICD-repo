{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Parameters": {
    "TopicName": {
            "Type": "String",
            "Default": "sns-caspia-bh-dev-s3-alarm-01",
            "Description": "Enter sns topic name "
        }
    },
    "Resources": {
        "s3": {
            "Type": "AWS::CloudFormation::Stack",
            "Properties": {
                "TemplateURL": "https://s3bucket-poc1.s3.amazonaws.com/s3.json"
            }   
        },
        "sns": {
            "Type": "AWS::CloudFormation::Stack",
            "Properties": {
                "TemplateURL": "https://s3bucket-poc1.s3.amazonaws.com/sns.json"
            },
                "Parameters": {
                "SnsTopicName": {
                    "Ref": "TopicName"
                }
            }
        }
    },
    "Outputs": {
        "StackRef": {
            "Value": {
                "Ref": "s3"
            }
        },
        "OutputFromNestedStack": {
            "Value": {
                "Fn::GetAtt": [
                    "s3",
                    "Outputs.BucketName"
                ]
            }
        }
    }
}
